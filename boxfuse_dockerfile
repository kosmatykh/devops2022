FROM tomcat:latest
WORKDIR /root/boxfuse
RUN apt update
RUN apt -y install maven default-jdk
RUN apt -y install git
RUN git clone https://github.com/boxfuse/boxfuse-sample-java-war-hello.git /root/boxfuse
ADD pom.xml /root/boxfuse
RUN mvn package
RUN cp target/hello-1.0.war /usr/local/tomcat/webapps
CMD ["catalina.sh", "run"]